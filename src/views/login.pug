extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        div(class="login")
            input(placeholder="Username", name="username" ,type="text", required)
            br
            input(placeholder="Password", name="password" ,type="password", required)
            input(type="submit", value="Log in", class="btn btn-secondary")
            br
            br
            button(onclick="location.href='users/github/start'", type="button" class="btn btn-dark") Continue with Github? 
                i.fab.fa-github

    hr
    div(class="createAccount") 
        span Don't have an account? 
        a(href="/join") Create Now &rarr; 
        
